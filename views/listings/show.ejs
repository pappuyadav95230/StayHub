<% layout('/layouts/boilerplates') %>
    <script>
        const mapToken = "<%= process.env.MAP_TOKEN %>";
        const listing = 
        <% - JSON.stringify(listing) %>;
    </script>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="listing-header mb-4">
                    <h3 class="listing-title">
                        <%= listing.title %>
                    </h3>
                </div>
                <div class="card show-card shadow-lg">
                    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
                    <div class="card-body">
                        <p class="card-text owner-info">
                            <i class="fas fa-user-circle"></i> Owned by <span class="owner-name">
                                <%= listing.owner.username %>
                            </span>
                        </p>
                        <p class="card-text description">
                            <%= listing.description %>
                        </p>
                        <p class="card-text price">
                            <b><i class="fas fa-rupee-sign"></i>
                                <%= listing.price.toLocaleString("en-IN") %>
                            </b>
                        </p>
                        <p class="card-text location">
                            <i class="fas fa-map-marker-alt"></i>
                            <%= listing.location %>, <%= listing.country %>
                        </p>
                    </div>
                </div>

                <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
                    <div class="btns mt-4 d-flex gap-3">
                        <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn"><i class="fas fa-edit"></i>
                            Edit</a>
                        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                            <button class="btn delete-btn"><i class="fas fa-trash-alt"></i> Delete</button>
                        </form>
                    </div>
                    <% } %>

                        <div class="reviews-section mt-5">
                            <% if (currUser) { %>
                                <hr class="styled-hr">
                                <h4 class="section-title"><i class="fas fa-comments"></i> Leave a Review</h4>
                                <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate
                                    class="needs-validation form-container">
                                    <div class="mb-4">
                                        <label for="rating" class="form-label">Rating</label>
                                        <fieldset class="starability-basic">
                                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                                value="0" checked aria-label="No rating." />
                                            <input type="radio" id="rate1" name="review[rating]" value="1" required />
                                            <label for="rate1" title="1 star">1</label>
                                            <input type="radio" id="rate2" name="review[rating]" value="2" />
                                            <label for="rate2" title="2 stars">2</label>
                                            <input type="radio" id="rate3" name="review[rating]" value="3" />
                                            <label for="rate3" title="3 stars">3</label>
                                            <input type="radio" id="rate4" name="review[rating]" value="4" />
                                            <label for="rate4" title="4 stars">4</label>
                                            <input type="radio" id="rate5" name="review[rating]" value="5" />
                                            <label for="rate5" title="5 stars">5</label>
                                        </fieldset>
                                        <div class="invalid-feedback">Please select a rating.</div>
                                    </div>
                                    <div class="mb-4">
                                        <label for="comment" class="form-label">Comments</label>
                                        <textarea name="review[comment]" id="comment" rows="4" class="form-control"
                                            required></textarea>
                                        <div class="invalid-feedback">Please add some comments for the review.</div>
                                    </div>
                                    <div class="d-grid">
                                        <button class="btn submit-btn">Submit Review</button>
                                    </div>
                                </form>
                                <hr class="styled-hr">
                                <% } %>

                                    <% if(listing.reviews.length> 0) { %>
                                        <div class="row">
                                            <h4 class="section-title"><i class="fas fa-star"></i> All Reviews</h4>
                                            <% for(let review of listing.reviews) { %>
                                                <div class="col-md-6 mb-4">
                                                    <div class="review-card shadow-sm">
                                                        <h5 class="review-author"><i class="fas fa-user-circle"></i> @
                                                            <%= review.author.username %>
                                                        </h5>
                                                        <p class="card-text review-comment">
                                                            <%= review.comment %>
                                                        </p>
                                                        <p class="card-text review-rating">
                                                            <b>Rating:</b>
                                                            <span class="star-rating">
                                                                <% for(let i=1; i <=5; i++) { %>
                                                                    <i
                                                                        class="fas <%= i <= review.rating ? 'fa-star' : 'fa-star fa-regular' %>"></i>
                                                                    <% } %>
                                                            </span>
                                                        </p>
                                                        <% if (currUser && review.author._id.equals(currUser._id)) { %>
                                                            <form method="POST"
                                                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                                <button
                                                                    class="btn btn-sm delete-review-btn">Delete</button>
                                                            </form>
                                                            <% } %>
                                                    </div>
                                                </div>
                                                <% } %>
                                        </div>
                                        <% } %>
                        </div>
            </div>
        </div>
        <div class="col-8 offset-2 mt-5">
            <h3 class="section-title">Where You'll Be</h3>
            <div id="map" class="map-container"></div>
        </div>
    </div>

    <script src="/js/map.js"></script>

    <script>
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>